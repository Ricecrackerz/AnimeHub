<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/animeContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <RatingBar
        android:id="@+id/animeRating"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/animePoster"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:isIndicator="true"
        android:numStars="10"
        android:progressTint="#FFD700"
        android:scaleX="0.75"
        android:scaleY="0.75"
        android:stepSize="0.5"
        android:transformPivotX="0dp"
        android:transformPivotY="0dp" />

    <ImageView
        android:id="@+id/animePoster"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/animeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="9dp"
        android:layout_toEndOf="@+id/animePoster"
        android:fontFamily="@font/alata"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        tools:text="Attack on Titan" />

    <TextView
        android:id="@+id/animeOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/animeTitle"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/animePoster"
        android:ellipsize="end"
        android:fontFamily="@font/alata"
        android:maxLines="6"
        android:textColor="#FFFFFF"
        tools:text="Centuries ago, mankind was slaughtered to near extinction by monstrous humanoid creatures called titans, forcing humans to hide in fear behind enormous concentric walls." />

</RelativeLayout>